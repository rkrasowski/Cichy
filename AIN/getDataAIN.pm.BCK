# to activate AIN's do sudo sudo modprobe ti_tscadcÂ 

use POSIX;

my $value;
sub getAIN {
my $ain = shift;
open (FH, "\/sys\/devices\/platform\/omap\/tsc\/$ain") or die $!;

 	

		while (<FH>)
			{
				$value = $_;
				$value =~ s/\0//g;
				$value = $value/41;
				$value = floor($value);
				if ($value == 0)
					{
						$value = 1;
					}			
			}


return $value;

close(FH);
}
1;
